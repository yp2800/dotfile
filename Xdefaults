URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select,font-size,autocomplete-ALL-the-things


!clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd: xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard
!keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

!url-select
URxvt.keysym.M-u: perl:url-select:select_next

!font-size
URxvt.keysym.C-S-I: perl:font-size:increase
URxvt.keysym.C-S-O: perl:font-size:decrease
URxvt.keysym.C-S-Up: perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

!autocomplete
URxvt.keysym.M-n: perl:aAtt:skeleton-word-complete
URxvt.keysym.M-p: perl:aAtt:undo

